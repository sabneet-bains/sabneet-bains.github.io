{
  "name": "sabneet-portfolio",
  "version": "1.0.0",
  "private": true,
  "description": "Portfolio site with modal projects and resume",
  "scripts": {
    "serve": "http-server . -p 4173 -c-1",
    "optimize:resume": "powershell -ExecutionPolicy Bypass -File ./scripts/optimize-resume.ps1",
    "optimize:videos": "powershell -ExecutionPolicy Bypass -File ./scripts/optimize-videos.ps1",
    "lint:js": "eslint \"js/**/*.js\"",
    "lint:css": "stylelint \"*.css\" \"styles/**/*.css\"",
    "lint:html": "html-validate \"*.html\"",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "test:a11y": "start-server-and-test \"npm run serve\" http://127.0.0.1:4173 \"pa11y-ci --config .pa11yci.json\"",
    "test:perf": "start-server-and-test \"npm run serve\" http://127.0.0.1:4173 \"lhci autorun --config=lighthouserc.json --upload.target=filesystem --upload.outputDir=.lighthouseci\"",
    "quality": "npm run lint && npm run test:a11y && npm run test:perf"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.0",
    "eslint": "^8.57.0",
    "html-validate": "^10.0.0",
    "http-server": "^14.1.1",
    "pa11y-ci": "^3.1.0",
    "start-server-and-test": "^2.0.4",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0"
  }
}
